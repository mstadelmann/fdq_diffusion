{
    "globals": {
        "project": "Celeb_Generation",
        "author": "Marc",
        "parent": "generate_faces.json"
    },
    "data": {
        "celeb_HDF": {
            "args": {
                "transforms": {
                    "resize_h": 256,
                    "resize_w": 256,
                    "in_min": 0,
                    "in_max": 255,
                    "norm_min": -1,
                    "norm_max": 1,
                    "export_lower_perc_cutoff": 0.005,
                    "export_upper_perc_cutoff": 0.995
                }
            }
        }
    },
    "train": {
        "path": "~/dev/fdq_diffusion/celeb_gen/diffusion_chuchichaestli.py",
        "args": {
            "epochs": 500,
            "use_GPU": true,
            "use_AMP": false,
            "accumulate_grad_batches": 1,
            "early_stop_val_loss": 150,
            "early_stop_train_loss": 150,
            "early_stop_nan": 5,
            "diffusion_scheduler": "linear",
            "diffusion_nb_steps": 800,
            "diffusion_shd_beta_start": 0.0001,
            "diffusion_shd_beta_end": 0.02,
            "diffusion_nb_plot_steps": 10
        }
    }
}